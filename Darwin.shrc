# Mac specific settings

function myshowpath() {
	local target="${1:-.}"
	python -c "import os; print(os.path.abspath('${target}'))"
}

# get full path of a file
alias y='myshowpath'

# ignore .DS_Store file
export FIGNORE=DS_Store

export CLICOLOR=1
alias la="\ls -GAl"       # show hidden files
alias lt="\ls -Gltc"      # sort by change time
alias lr="\ls -GlR"       # recursive ls
alias ls="\ls -GlhS"      # sort by size
